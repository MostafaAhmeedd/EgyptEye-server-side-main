<!DOCTYPE html>
<!--=== Coding by CodingLab | www.codinglabweb.com === -->
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>EgyptEye-viewPlaces</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!----======== CSS ======== -->
    <link href="/styles.css" rel="stylesheet">
    <link href="/getlandmarks.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
</head>

<body>

     <nav class="nav">
        
         <ul class="nav-links">
            <li><a href="/profile">
                   <i class="uil uil-user"></i>
                   <span class="link-name">Profile</span>
                </a>
                <a href="/main">
                    <i class="uil uil-home"></i>
                    <span class="link-name">Home</span>
                </a>
            </a></li>
            <li>
                <img src="/logoo.png" width="100" height="100">
            </li>
            <li><a href="/login" >
                <i class="uil uil-signout"></i>
                <span class="link-name">Logout</span>
            </a></li>
         </ul>
     </nav>

     <section class="dashboard">
        <div class="formbg-inner padding-horizontal--48">
          <table>
            <thead>
              <tr>
                <th>Id</th>
                <th>Title</th>
                <th class="description" colspan="3">Description</th>
                <th>Image</th>
                <th>Longitude</th>
                <th>Latitude </th>
                <th>Action</th>
              </tr>
            </thead>
            <% landmarks.forEach(item=> { %>
            <tbody>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.title %></td>
                <td class="description" colspan="3"><%= item.description %></td>
                <td><img src="/<%= item.image.image %>" width="100" height="100" ></td>
                <td><%= item.location.long %></td>
                <td><%= item.location.lat %></td>
                <td><button class="edit">edit</button><button class="delete">delete</button></td>
              </tr>
            </tbody>
            <% }); %> 
       </table>
        </div>
    </section> 
     <script src="/main.js"></script>
</body>
     
</html>