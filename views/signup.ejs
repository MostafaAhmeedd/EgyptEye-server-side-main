<body>

     <nav class="nav">
        
         <div class="logo">
            <div>
                <img src="/logoo.png"    width="100" height="100">
            </div>
          </div>
     </nav>

     


     <section class="dashboard">
        <div class="formbg-inner padding-horizontal--48">
            
            <form class="form" action="/APIs/admin/signup" method="POST">
                <div class="title">
                    <span class="padding-bottom--15">Create Account</span>
                </div>
                <div class="field">
                    <div class="firstName">
                        <label>First Name</label>
                        <input type="text" name="firstName" maxlength="10" minlength="4" required>
                    </div>
                    <div class="lastName">
                        <label>Last Name</label>
                        <input type="text" name="lastName" maxlength="10" minlength="4" required>
                    </div>    
                </div>
                <div class="field">
                  <div class="firstName">
                    <label>Email</label>
                    <input type="email" name="email" maxlength="50" minlength="4" required>
                  </div>
                  <div class="lastName">
                    <label>Password</label>
                    <input type="password" name="password" required>
                  </div> 
                </div>

                <div class="field">
                  <div class="firstName">
                    <label>Phone Number</label>
                    <input type="text" name="phoneNumber" required>
                  </div> 
                </div>

                <div class="field">
                    <button type="submit">Sign Up</button>
                </div>
            </form>
        </div>
     </section>

     

     
       
</body>

