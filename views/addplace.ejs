     <section class="dashboard">
        <div class="formbg-inner padding-horizontal--48">
            
            <form class="form" action="/APIs/addlandmark" method="POST" enctype="multipart/form-data">
                <!-- <input type="hidden" name="token" value=""> -->
                <div class="title">
                    <span class="padding-bottom--15">Add Place</span>
                </div>
                <div class="field">
                    <label for="AdminName">Add Title</label>
                    <input type="text" name="title" maxlength="20" minlength="4" required>
                </div>

                <div class="field">
                    <div class="grid--50-50">
                        <label for="password">Add Description
                            <textarea name="description" rows="5" cols="55"></textarea>
                        </label>
                    </div>
                </div>

                <div class="field">
                    <label for="AdminName">Add Image</label>
                    <input type="file" name="image" required>
                </div>
                
                <div class="field">
                    <label for="AdminName">Add Longitude </label>
                    <input type="text" name="long" required>
                </div>
                
                <div class="field">
                    <label for="AdminName">Add Latitude</label>
                    <input type="text" name="lat" required>
                </div>
                <div class="field">
                    <button type="submit"> Add </button> 
                </div>
            </form>
        </div>
     </section>      
